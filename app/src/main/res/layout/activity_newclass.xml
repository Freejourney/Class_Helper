<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">



        <android.support.design.widget.TextInputEditText
            android:id="@+id/classname_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入课程名"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/teachername_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="老师姓名"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/studentnumber_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入本课程学生人数"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/place_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入本课程上课地点"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/classtime_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入本课程上课时间"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>
    </LinearLayout>


    <Button
        android:id="@+id/create_newclass_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
